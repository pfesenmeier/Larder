@model Larder.Models.IngredientCreate

@{
    ViewBag.Title = "Add Ingredient";
}

<h1 class="display-4 mb-3">Ingredients</h1>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<form>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.Partial("_IngredientCreate", Model)
    <button type="submit" value="Create" class="btn btn-success">Create</button>
</form>
}

<div class="mt-1">
    @Html.ActionLink("Add Instructions", "Create", "Action", new { id = Model.LarderId }, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
