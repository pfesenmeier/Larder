@model Larder.Models.LarderDetail

@{
    ViewBag.Title = "Details";
}

    <h1 class="display-4">@Html.DisplayFor(model => model.Name)</h1>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Seasons)
            <div class="float-right">
                @Html.DisplayNameFor(model => model.DateCreated)
            </div>
        </dt>

        <dd>
            @if (Model.Seasons.Count != 0) { String.Join(", ", Model.Seasons); }
            else { <text>Any</text> }
            <div class="float-right">
                @Html.DisplayFor(model => model.DateCreated.Date)
            </div>
        </dd>
            @if (Model.DateModified != null)
            {
                <dt>
                    &nbsp;
                    <div class="float-right">
                        @Html.DisplayNameFor(model => model.DateModified)
                    </div>
                </dt>

                <dd>
                    &nbsp;
                    <div class="float-right">
                        @Html.DisplayFor(model => model.DateModified)
                    </div>
                </dd>
            }
            @if (Model.Description != null)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>
            }
    </dl>

    @if (Model.Ingredients.Count != 0)
    {
        <label for="Ingredients" class="font-weight-bold">
                @Html.DisplayNameFor(model => model.Ingredients)
        </label>
        <ul id="Ingredients" class="list-group list-group-flush mb-3">
            @foreach (var ingredient in Model.Ingredients)
            {
                <li class="list-group-item">@ingredient.ToString()</li>
            }
        </ul>
    }
    @if (Model.Actions.Count != 0)
    {
        <strong>@Html.LabelFor(model => model.Actions)</strong>
        <ul class="list-group list-group-flush">
            @foreach (var action in Model.Actions)
            {
                <li class="list-group-item">@action.ToString()</li>
            }
        </ul>
    }
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
