@model Larder.Models.LarderDetail

@{
    ViewBag.Title = "Details";
}
<div class="mx-4">
    @Html.Partial("_FoodDetails", Model)
    @Html.Partial("_SeasonDetail", Model.Seasons)
</div>
@Html.Partial("_IngredientList", Model.Ingredients)
@Html.Partial("_ActionList", Model.Actions)

<p class="mx-4">
    <i class="far fa-edit"onclick="toggleEdit()"></i>
</p>


<script>
    function toggleEdit() {
        var x = document.querySelectorAll(".detail-edit");
        var i;
        console.log(x);
        for (i = 0; i < x.length; i++){
            if (x.style.display === "none") {
                x[i].style.display = "block";
            } else {
                x[i].style.display = "none";
            }
        }
    }    
</script>

