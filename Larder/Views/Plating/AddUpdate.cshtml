@model Larder.Models.PlatingAddList
@{
    ViewBag.Title = "Add Plating";
}

<h1 class="display-4">Add Plating</h1>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.RecipeId)

    <table class="table">
        <tbody>

                @for (int i = 0; i < Model.Platings.Count(); i++)
                {
                    <tr>
                        <th>
                            <div class="form-group">
                                @Html.CheckBoxFor(m => m.Platings[i].IsIncluded, new { @class = "form-check-input" })
                                @Html.DisplayFor(m => m.Platings[i].Name)
                                @Html.HiddenFor(m => m.Platings[i].ID)
                            </div>
                        </th>
                        <td>
                            @Html.DisplayFor(m => m.Platings[i].Description)
                        </td>
                    </tr>
                }

        </tbody>
    </table>
    <button type="submit" value="AddUpdate" class="btn btn-success">Submit</button>
}


