@model IEnumerable<Larder.Models.ActionListItem>

<div>
    @if (Model.Count() != 0)
    {
        <label class="font-weight-bold" for="#Actions">Directions</label>
        <ul class="list-group list-group-flush" id="Actions">
            @foreach (var action in Model)
            {
                <li class="list-group-item">@action.ToString()</li>
            }
        </ul>
    }
</div>
