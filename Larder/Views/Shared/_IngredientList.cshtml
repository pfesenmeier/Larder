@model IEnumerable<Larder.Models.IngredientListItem>

<div>
    @if (Model.Count() != 0)
    {
        <label for="Ingredients" class="font-weight-bold">
            Ingredients
        </label>
        <ul id="Ingredients" class="list-group list-group-flush mb-3">
            @foreach (var ingredient in Model)
            {
                <li class="list-group-item">@ingredient.ToString()</li>
            }
        </ul>
    }
</div>