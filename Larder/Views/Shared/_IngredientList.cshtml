@model IEnumerable<Larder.Models.IngredientListItem>

@if (Model.Count() != 0)
{
    foreach (var item in Model)
    {
        <li class="list-group-item">
            @Html.DisplayFor(modelItem => item.Amount)
            @Html.DisplayFor(modelItem => item.Unit)
            @Html.DisplayFor(modelItem => item.Name)
            @Html.ActionLink(" ", "Delete", "Ingredient", new { id = item.ID }, new { @class = "fas fa-trash-alt float-right" })
            @Html.ActionLink(" ", "Edit", "Ingredient", new { id = item.ID }, new { @class = "fas fa-edit float-right pr-3" })
        </li>
    }


}