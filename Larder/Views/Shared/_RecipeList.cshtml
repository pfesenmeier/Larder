@model List<Larder.Models.RecipeListItem>

<div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item h5 font-weight-bold">
            Recipes
        </li>
        @if (Model.Count() != 0)
        {
            foreach (var item in Model)
            {
                <li class="list-group-item">
                    @Html.DisplayFor(modelitem => item.Name)
                    <span class="float-right">
                        <span>
                            @Html.ActionLink(" ", "Details", "Recipe", new { id = item.ID }, new { @class = "fas fa-info pr-3 detail-info" })
                        </span>
                    </span>
                </li>
            }
        }
    </ul>
</div>